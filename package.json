{
  "name": "project-pizza-ci",
  "private": true,
  "version": "1.0.0",
  "description": "CI quality gates for Project Pizza static site",
  "scripts": {
    "lint:css": "stylelint \"resources/css/**/*.css\"",
    "lint:html": "htmlhint \"**/*.html\"",
    "test:unit": "vitest run --globals tests/unit",
    "test:e2e": "playwright test",
    "lighthouse:ci": "lhci autorun --config=.lighthouserc.json"
  },
  "overrides": {
    "minimatch": "^10.2.1"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.55.0",
    "htmlhint": "^1.7.1",
    "http-server": "^14.1.1",
    "stylelint": "^16.24.0",
    "vitest": "^4.0.18"
  }
}